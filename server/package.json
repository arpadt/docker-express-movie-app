  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "mongoose": "^5.2.7",
    "morgan": "^1.9.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.6",
    "@types/chai-http": "^3.0.5",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.0",
    "@types/request": "^2.47.1",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.2.0",
    "errorhandler": "^1.5.0",
    "eslint": "^5.3.0",
    "eslint-config-google": "^0.9.1",
    "mocha": "^5.2.0",
    "node-dev": "^3.1.3",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.30",
    "tsconfig-paths": "^3.6.0",
    "typescript": "^3.1.3"
