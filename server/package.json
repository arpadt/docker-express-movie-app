{
  "name": "express-mongo-docker",
  "version": "1.0.0",
  "description": "Express app with MongoDB and Docker",
  "main": "lib/server",
  "scripts": {
    "start": "node server/server.js",
    "start:dev": "cross-env MONGO_URI=mongodb://192.168.99.100:27017/db-development npm run build:dev",
    "test": "npm run build && mocha lib/test/**/*.test.js --exit",
    "prebuild": "rm -rf lib",
    "build": "tsc -p .",
    "build:dev": "ts-node-dev src/server.ts"
  },
  "author": "Arpad Toth",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.18",
    "@types/chai-http": "^3.0.5",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.12",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^10.17.60",
    "@types/request": "^2.48.5",
    "@types/request-promise-native": "^1.0.17",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.1",
    "errorhandler": "^1.5.1",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.9.1",
    "mocha": "^8.4.0",
    "node-dev": "^7.0.0",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.9"
  }
}
